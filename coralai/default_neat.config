#--- Default parameters for Coralai experiments ---#

[NEAT]
# Ignored
fitness_criterion      = max
fitness_threshold      = 0
pop_size               = 500
reset_on_extinction    = False
no_fitness_termination = True


[DefaultGenome]
# network parameters
num_inputs              = 6
num_hidden              = 6
num_outputs             = 2
initial_connection      = partial_nodirect 0.5
feed_forward            = True

single_structural_mutation = False
structural_mutation_surer  = default

# node activation options
activation_default      = random
activation_mutate_rate  = 0.1
activation_options      = sigmoid abs gauss sin identity relu tanh

# node aggregation options
aggregation_default     = random
aggregation_mutate_rate = 0.0
aggregation_options     = sum

# node bias options
bias_init_mean          = 0.0
bias_init_type          = gaussian
bias_init_stdev         = 0.1
bias_max_value          = 30.0
bias_min_value          = -30.0
bias_mutate_power       = 0.01
bias_mutate_rate        = 0.4
bias_replace_rate       = 0.005

# genome compatibility options
compatibility_disjoint_coefficient = 1.0
compatibility_weight_coefficient   = 0.5

# node add/remove rates
node_add_prob           = 0.2
node_delete_prob        = 0.2

# connection add/remove rates
conn_add_prob           = 0.5
conn_delete_prob        = 0.5

# connection enable options
enabled_default         = True
enabled_rate_to_true_add= 0.0
enabled_rate_to_false_add= 0.0
enabled_mutate_rate     = 0.01

# node response options
response_init_mean      = 1.0
response_init_type      = gaussian
response_init_stdev     = 0.0
response_max_value      = 30.0
response_min_value      = -30.0
response_mutate_power   = 0.01
response_mutate_rate    = 0.1
response_replace_rate   = 0.0

# connection weight options
weight_init_mean        = 0.0
weight_init_type        = gaussian
weight_init_stdev       = 1.0
weight_max_value        = 30
weight_min_value        = -30
weight_mutate_power     = 0.5
weight_mutate_rate      = 0.8
weight_replace_rate     = 0.1

[DefaultSpeciesSet]
# Ignored
compatibility_threshold = 4.0

[DefaultStagnation]
# Ignored
species_fitness_func = max
max_stagnation       = 15
species_elitism      = 1

[DefaultReproduction]
# Ignored
elitism            = 1
survival_threshold = 0.2
min_species_size     = 2
